- @selected = :dashboard
- @title = "Dashboard"

%p.message.info
  %strong You must be new!
  Head on over to the
  = link_to "settings tab", admin_settings_path 
  and configure your teaser page now.

.box#statistics
  .graph
    = remote_graph("visitor_statistics", :url => {:action => 'graph'})
    %p.views
      View:
      %a.selected{:href=>"#"} Past 7 days
      %span.separator= "|"
      %a{:href=>"#"} Last 2 months
      %span.separator= "|"
      %a{:href=>"#"} All Time
  %ul.large_statistics
    %li
      %big= @statistics.visitors_total
      unique visitors
      %small= "since #{@statistics.start_date.to_s(:month_day_year)}"
    %li
      %big= @statistics.visitors_today
      visitors today
    %li
      %a{:href=>admin_subscribers_path}
        %big= @subscriber_count
        subscribers

.box
  %p
    %big
      You can view your teaser page here:
      = link_to teaser_url, teaser_url