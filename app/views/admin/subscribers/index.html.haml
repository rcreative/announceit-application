- @selected = :subscribers
- @title = "Subscribers"

%table.index#subscribers{:border=>0, :cellpadding=>0, :cellspacing=>0}
  %tr
    %th.name Name
    %th.email Email Address
  %tbody
    - for subscriber in @teaser.subscribers
      %tr[subscriber]
        %td.name=h subscriber.name
        %td.email= mail_to subscriber.email

.download
  %h3 Download:
  %ul
    %li
      = link_to "E-mail Addresses", :format => "txt"
    %li
      = link_to "CSV", :format => "csv"