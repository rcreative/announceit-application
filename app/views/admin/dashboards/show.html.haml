  .graph
    = remote_graph("visitor_statistics", :route => '/dashboard/graph')
    %p.views
      View:
      %a.selected{:href=>"#"} Past 7 days
      %span.separator= "|"
      %a{:href=>"#"} Last 2 months
      %span.separator= "|"
      %a{:href=>"#"} All Time
  %ul.large_statistics
    %li
      %big 230
      unique visitors
      %small since April 3, 2009
    %li
      %big 18
      visitors today
    %li
      %a{:href=>admin_subscribers_path}
        %big 42
        subscribers

